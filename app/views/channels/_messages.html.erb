<%=form_for @message do |f|%>
	<%=f.hidden_field :user_id, value: current_user.id%>
	<%=f.hidden_field :channel_id, value: @channel.id%>
	<div class="mb-3">	
	<%=f.text_area :msg, placeholder:"Enter Your message", required: true, class:"form-control", id:"exampleFormControlTextarea1", rows:"3"%>
	</div>
	<%=f.submit "Submit" %>
<%end%>