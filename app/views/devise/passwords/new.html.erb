<div class="deviceContainer">
  <header class="deviceHeader">
    <div class="deviceImageContainer">
      <img src="https://a.slack-edge.com/bv1-9/slack_logo-ebd02d1.svg"/>
    </div>
  </header>
  <section class="deviceSecrion">
    <div class="deviceSectionInner">
      <h1 style="display: flex; align-items: center; justify-content: center;">Forgot your password?</h1>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="actions">
          <%= f.submit "Send me reset password instructions" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </section>
</div>
